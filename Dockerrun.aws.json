{
    "AWSEBDOckerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "ktadikonda/dockercomplex-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "ktadikonda/dockercomplex-server",
            "hostname": "api", 
            "essential": false
        },
        {
            "name": "worker",
            "image": "ktadikonda/dockercomplex-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "ktadikonda/dockercomplex-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }               
            ],
            "links": ["client","server"]
        }
        
    ]
}